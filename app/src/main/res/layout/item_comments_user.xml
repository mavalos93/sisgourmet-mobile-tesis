<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_padding"
        app:cardCornerRadius="@dimen/default_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_padding"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/user_comment_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="@dimen/default_padding"
                    android:contentDescription="@string/description_image"
                    android:src="@mipmap/ic_user_flaticons" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_padding"
                    android:orientation="vertical"
                    android:padding="@dimen/default_padding">

                    <TextView
                        android:id="@+id/username_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/item_username_comment"
                        android:textColor="@color/colorGraphite"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatRatingBar
                            android:id="@+id/user_comment_ratingbar"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/default_padding"
                            android:theme="@style/RatingBar" />

                        <TextView
                            android:id="@+id/date_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date_menu" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/lunch_package_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/description_image" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/data_user_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_padding"
                android:maxLength="650"
                android:text="@string/large_text" />
        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>